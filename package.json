  },
  "devDependencies": {
    "chai": "1.8.1",
    "jshint": "~1.1.0",
    "mocha": "1.14.0",
    "mocha-phantomjs": "3.1.6",
    "phantomjs": "*",
    "http-server": "^0.6.1",
    "karma": "^0.12.2",
    "karma-cajon": "0.0.1",
    "karma-mocha": "^0.1.3",
