{
  "name": "Livefyre",
  "description": "Authentication Delegate for Livefyre projects",
  "author": "Livefyre <support@livefyre.com>",
  "repository": "https://github.com/Livefyre/auth-delegate",
  "contributors": {
    "name": "Benjamin Goering",
    "email": "ben@livefyre.com"
  },
  "version": "0.3.0",
  "dependencies": {
